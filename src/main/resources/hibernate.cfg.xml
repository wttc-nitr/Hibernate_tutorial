<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<!-- the above url refers to a file which contains the below tags-->

<hibernate-configuration>
    <session-factory>
        <!-- url -->
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/hibernate_tutorial</property>

        <!-- username -->
        <property name="hibernate.connection.username">animesh</property>

        <!-- password -->
        <property name="hibernate.connection.password">postgres</property>

        <!-- postgresql driver -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        
        <!-- to log the hibernate-generated SQL query-->
        <property name="hibernate.show_sql">true</property>
    </session-factory>
</hibernate-configuration>
